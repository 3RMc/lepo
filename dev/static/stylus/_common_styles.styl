.sandwich
  position relative
  display inline-block
  vertical-align middle
  width 50px
  height 50px
  margin-right 15px
  border 2px solid white
  border-radius 50px

  .sandwich-line
    position absolute
    display block
    width 25px
    height 4px
    left 50%
    margin-left -12.5px
    background-color: #fff

  .sandwich-line--top
    top 13px

  .sandwich-line--middle
    top 21px

  .sandwich-line--bottom
    top 29px
