.main-banner
  height 400px
  background-image  url("../img/content/logo.png"), url("../img/content/header_bg.jpg")
  background-position center, top
  background-repeat no-repeat
  border-bottom 3px solid #6640b6

.main_block1
  height 1250px

  .main_block1__title
    display flex
    justify-content center
    align-items center
    height 100px
    font-size 50px

  .main_block1__basic
    display flex
    justify-content space-around
    height 400px

    .main_block1__basic-image
      width 34%
      background url("../img/content/section1_img1.png") center top no-repeat

    .main_block1__basic-description
      width 66%
      font-size 23px
      line-height auto

    .main_block1__basic-description p
      font-size 23px

  .main_block1__btn
    display flex
    justify-content end

  .main_block1__images
    display flex
    flex-wrap wrap
    justify-content space-between
    height 650px
    margin 75px 5% 0 5%

    .main_block1__image1
      background url("../img/content/section1_img2.jpg")

    .main_block1__image2
      background url("../img/content/section1_img3.jpg")

    .main_block1__image3
      background url("../img/content/section1_img4.jpg")

    .main_block1__image4
      background url("../img/content/section1_img5.png")

    .main_block1__image5
      background url("../img/content/section1_img6.png")

  .main_block1__image-item
    margin 25px 0

  .main_block1__image-item:nth-child(-n+3)
    min-width 367px
    height 235px

  .main_block1__image-item:nth-child(n+4)
    min-width 482px
    height 232px

